<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a pet for adoption</h1>

      <%= simple_form_for (@pet) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.input :description %>
        <%= f.input :age %>
        <%= f.input :gender %>
        <%= f.input :HDB_approved %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
