<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create an account for adoption</h1>

      <%= simple_form_for (@owner) do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :bio %>
        <%= f.input :address %>
        <%= f.input :contact%>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
